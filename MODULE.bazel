        "org.vineflower:vineflower:1.11.1",

        # mod dependencies
        "net.fabricmc:fabric-loader:0.16.14",
        "com.terraformersmc:modmenu:14.0.0-rc.2",
        "net.fabricmc.fabric-api:fabric-api:0.125.3+1.21.6",
