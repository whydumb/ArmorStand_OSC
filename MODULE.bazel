minecraft = use_extension("//repo:minecraft_jar.bzl", "minecraft")
minecraft.minecraft_jar(
    version = "1.21.6-pre2",
    type = "client",
    assets = True,
    mapping = False,
)
minecraft.minecraft_jar(
    version = "1.21.6-pre2",
    type = "server",
    mapping = False,
)
minecraft.exclude_library(names = ["org.ow2.asm:asm:9.6"])
use_repo(minecraft, "minecraft")
